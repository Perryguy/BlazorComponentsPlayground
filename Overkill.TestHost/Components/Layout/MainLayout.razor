@inherits LayoutComponentBase
@using Overkill.UI
@using Overkill.UI.Theme

<OverkillThemeProvider Mode="ThemeMode.Light"
                       Brand="BrandFamily.Orange"
                       Neutral="NeutralFamily.Zinc"
                       Preset="Preset.VibrantIndigo"
                       Density="Density.None">

  <header class="ok-header">
    <div class="bar container">
      <span class="brand"><span class="dot"></span>Overkill.UI</span>
      <div class="spacer"></div>

      <!-- Optional: quick toggle using the controller -->
      <OverkillQuickToggle />
    </div>
  </header>

  <div class="ok-shell">
    <aside class="ok-sidebar">
      <nav class="menu">
        <NavLink href="/" Match="NavLinkMatch.All">Home</NavLink>
        <NavLink href="/components">Components</NavLink>
        <NavLink href="/theme">Theme</NavLink>
      </nav>
    </aside>
    <main class="ok-content">
      <div class="container">@Body</div>
    </main>
  </div>
</OverkillThemeProvider>
